<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Pos</th>
      <th>Attg</th>
      <th>Att</th>
      <th>Yds</th>
      <th>Avg</th>
      <th>Ydsg</th>
      <th>Td</th>
      <th>Lng</th>
      <th>Rfd</th>
      <th>Rfdp</th>
      <th>R20ye</th>
      <th>R40ye</th>
      <th>Fun</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.team_id %></td>
        <td><%= player.pos %></td>
        <td><%= player.attg %></td>
        <td><%= player.att %></td>
        <td><%= player.yds %></td>
        <td><%= player.avg %></td>
        <td><%= player.ydsg %></td>
        <td><%= player.td %></td>
        <td><%= player.lng %></td>
        <td><%= player.rfd %></td>
        <td><%= player.rfdp %></td>
        <td><%= player.r20ye %></td>
        <td><%= player.r40ye %></td>
        <td><%= player.fun %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

